---
const {title, description} = Astro.props;
---

<article class="bg-white border border-gray-200 rounded-2xl overflow-hidden shadow-sm">
    <div>
      <slot /> 
    </div>       
    <div class="p-6">          
      <h4 class="title-font text-xl tracking-tight font-bold text-gray-900 mb-2">{title}</h4>
      <p>{description}</p>         
    </div>  
</article>