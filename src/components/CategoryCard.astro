---
const { title, body, path } = Astro.props
---

<div class="flex flex-col gap-4">
  <div class="aspect-[1/1] relative overflow-hidden rounded-lg">
    <img class="w-full h-full absolute inset-0" src={path} alt={title}>
  </div>
  <div>
    <h4 class="text-sm font-semibold text-gray-950">{title}</h4>
    <p class="text-sm mt-2">{body}</p>  
  </div>  
</div>