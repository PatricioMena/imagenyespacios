---
interface Props {
  href: string;
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted" | "muted";
  class?: string;
  [x: string]: any;
}

const {href, block,  size = "lg", style = "primary",  class: className, ...rest} = Astro.props; 

const sizes = {
  lg: "px-5 py-2.5", 
  md: "px-4 py-2"
}

const styles = {
  outline: "bg-white border-2 border-gray-200 text-primary-500 hover:bg-primary-100 hover:border-primary-200 hover:text-primary-700",
  primary: "bg-primary-500 text-white hover:bg-primary-700  border-2 border-transparent",
  inverted: "bg-primary-100 text-primary-700  border-2 border-transparent",  
  muted: "bg-gray-100 hover:bg-gray-200   border-2 border-transparent", 
}
---

<a
  href={href}
  {...rest}
  class:list={[
    "rounded inline-flex items-center justify-center text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>