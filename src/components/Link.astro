---
interface Props {
  href: string;
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted" | "muted";
  class?: string;
  [x: string]: any;
}

const {href, block,  size = "lg", style = "primary",  class: className, ...rest} = Astro.props; 

const sizes = {
  lg: "px-8 py-3", 
  md: "px-4 py-2.5 text-sm"
}

const styles = {
  outline: "bg-white border-2 border-gray-200 text-gray-600 hover:bg-gray-50 hover:text-gray-700",
  primary: "bg-primary-500 text-white hover:bg-primary-600  order-2 border-transparent focus:bg-blue-700",
  inverted: "bg-primary-100 text-primary-700 hover:bg-primary-200  border-2 border-transparent",  
  muted: "bg-gray-100 hover:bg-gray-200  border-2 border-transparent", 
}
---

<a
  href={href}
  {...rest}
  class:list={[
    "inline-flex items-center justify-center text-base font-semibold transition-all duration-200 rounded-md shadow-sm",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>