---
import { imageConfig } from "astro:assets";
import Heading from './Heading.astro'
const images = await Astro.glob('../assets/logos/*').then(files => {
    return files.map(file => file.default)
})
const heading = { headingText: 'Algunas de las marcas de nivel mundial con las que trabajamos',descriptionText: 'Somos distribuidores de las marcas l√≠deres del mercado'}

---
<section class="py-10 sm:py-16 lg:py-28">
  <div class="container">
    <div class="mx-auto max-w-prose text-center mb-12">     
      <Heading headingText={heading.headingText}/>    
    </div>: 
    <div class="grid items-center justify-center max-w-4xl grid-cols-3 md:grid-cols-5 mx-auto gap-x-10 gap-y-16 ">             
        {images.map(image => (
              <div class="">
                <img
                  class="object-contain w-full h-10"
                  src={image.src}
                  alt={image.alt}
                  loading="lazy"
                />
              </div>
            ))
          }
    </div>
  
  </div> 
</section>



