---
interface Props {
	title: string;
	body: string;
	img?: string; 
}

const {title, body } = Astro.props;
---

<div class="swiper-slide max-w-sm  bg-white border border-gray-100 rounded-lg shadow-sm  overflow-hidden">	
	<slot/>	
	<div class="space-y-4 p-6">		
		<h3 class="text-xl font-bold tracking-tight text-gray-900 ">{title}</h3>		
		<p class="text-base">{body}</p>	  	
	</div>	
</div>
